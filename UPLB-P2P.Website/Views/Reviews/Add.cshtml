@model UPLB_P2P.Website.Models.ViewModels.AddReviewRequest


<div class="bg-secondary bg-opacity-2">
    <div class="container">
        <h1>Add New Review</h1>
    </div>
</div>

<div class="container py-5">
    <form method="post">

        <div class="mb-3">
            <label class="form-label">Rating</label>
            <input type="text" class="form-control" id="rating" asp-for="Rating"/>
        </div>
        <div class="mb-3">
            <label class="form-label">Title</label>
            <input type="text" class="form-control" id="title" asp-for="Title"/>
        </div>
        <div class="mb-3">
            <label class="form-label">Content</label>
            <input type="text" class="form-control" id="content" asp-for="Content"/>
        </div>
        <div class="mb-3">
            <button type="submit" class="btn btn-dark">Submit</button>
        </div>
    </form>
</div>